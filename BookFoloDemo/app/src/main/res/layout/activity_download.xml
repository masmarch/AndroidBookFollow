<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DownloadActivity"
    android:id="@+id/drawerLayout"
    android:background="@drawable/download">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <RelativeLayout
            android:layout_width="384dp"
            android:layout_height="485dp"
            android:layout_marginLeft="14dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnbook1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/book1" />
                <ImageButton
                    android:id="@+id/btnbook2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnbook1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bookv2" />
                <ImageButton
                    android:id="@+id/btnbook3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnbook2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/book3" />
                <ImageButton
                    android:id="@+id/btnbook4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnbook3"
                    android:scaleType="fitXY"
                    android:src="@mipmap/book4" />
                <ImageButton
                    android:id="@+id/btnbook5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnbook4"
                    android:scaleType="fitXY"
                    android:src="@mipmap/book5" />
                </LinearLayout>
            </ScrollView>


        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:id="@+id/navigation_view">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>