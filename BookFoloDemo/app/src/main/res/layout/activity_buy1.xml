<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buy1Activity"
    android:id="@+id/drawerLayout"
    android:background="@drawable/bookoriview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="396dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="270dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btncm1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/commenttt1" />

                <ImageButton
                    android:id="@+id/btncm2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btncm1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/commenttt2" />
                <ImageButton
                    android:id="@+id/btncm3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btncm2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/commenttt3" />
                <ImageButton
                    android:id="@+id/btncm4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btncm3"
                    android:scaleType="fitXY"
                    android:src="@mipmap/commenttt4" />

                <ImageButton
                    android:id="@+id/btnre"
                    android:layout_width="59dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginLeft="335dp"
                    android:src="@mipmap/rep" />

                <ImageButton
                    android:id="@+id/btnre1"
                    android:layout_width="59dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/btnre"
                    android:layout_marginTop="76dp"
                    android:layout_marginLeft="330dp"
                    android:src="@mipmap/rep" />

                <ImageButton
                    android:id="@+id/btnre2"
                    android:layout_width="59dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/btnre1"
                    android:layout_marginTop="77dp"
                    android:layout_marginLeft="330dp"
                    android:src="@mipmap/rep" />
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnbuy"
            android:layout_width="64dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="231dp"
            android:src="@mipmap/buy" />

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:id="@+id/navigation_view">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>